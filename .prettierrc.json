{
    "plugins": ["prettier-plugin-blade", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade"
            }
        }
    ],
    "printWidth": 120,
    "tabWidth": 4,
    "tailwindConfig": "./resources/css/tailwind.css",
    "tailwindAttributes": [
        "class",
        "className",
        "buttonClassName"
    ],
    "tailwindFunctions": ["cx", "cva"]
}
