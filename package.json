    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "20",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.2",
    "autoprefixer": "10.4.20",
    "axios": "1.7.7",
    "husky": "9.1.6",
    "laravel-vite-plugin": "1.0.5",
    "lint-staged": "15.2.10",
