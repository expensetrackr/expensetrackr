    "input-otp": "1.2.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-twc": "1.4.2",
    "sonner": "1.5.0",
    "tailwind-merge": "2.5.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@headlessui/tailwindcss": "0.2.1",
